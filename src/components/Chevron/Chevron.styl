.chevron::before
  border-style solid;
  border-width 0.15em 0.15em 0 0;
  content '';
  display inline-block;
  height 0.45em;
  left 0.15em;
  position relative;
  vertical-align top;
  width 0.45em;

.chevron.up:before
  bottom -6px;
  transform rotate(-45deg)

.chevron.down:before
  bottom -2px;
  transform rotate(135deg)

.chevron.right:before
  left 0
  transform rotate(45deg)

.chevron.left:before
  left 0.25em
  transform rotate(-135deg)
