.chevron::before
  border-style solid;
  border-width 0.25em 0.25em 0 0;
  content '';
  display inline-block;
  height 0.45em;
  left 0.15em;
  position relative;
  vertical-align top;
  width 0.45em;

.chevron.down:before
  top 0.15em;
  transform rotate(-45deg)
.chevron.up:before
  top 0;
  transform rotate(135deg)
