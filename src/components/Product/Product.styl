.product
  display flex
  background-color #F5F6F7
  border 2px solid #A89B7B
  margin 29px 59px
  flex 1
  flex-wrap wrap
  max-width 1084px
  max-height 1029px
  .imageContainer
    flex 1
    margin-top 109px
    margin-left 42px
    margin-bottom 80px
    margin-right 60px
    min-width 320px
    .image
      width 100%
      height 100%
  .infoContainer
    display flex
    @media (max-width: 830px)
      align-content center
      margin-left 49px
      margin-bottom 19px
    .left
      display flex
      flex-direction column
      margin-top 109px
      margin-right 50px
      .colors
        display flex
        .color
          height 20px
          cursor pointer
          width 20px
          border-radius 40px
          margin-right 9px

    .right
      display flex
      flex-direction column
      margin-top 109px
      margin-right 109px
