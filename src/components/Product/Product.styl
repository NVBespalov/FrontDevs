.product
  display flex
  background-color #F5F6F7
  border 7px solid #A89B7B
  flex 1
  flex-wrap wrap
  max-width 1084px
  max-height 1029px
  .imageContainer
    flex: 1;
    margin-top 98px
    margin-left 31px
    margin-right 77px
    min-width 320px
    margin-bottom 90px
    @media (max-width: 935px)
      margin-bottom 0
      flex 0
    .image
      width 100%
      height 100%
  .infoContainer
    margin-top 93px
    margin-right 93px
    font-size 22px
    flex-direction column
    font-weight bold
    @media (max-width: 935px)
      display flex
      align-content center
      margin-left 49px
      margin-bottom 19px
    .priceInfo
      .price
        margin-right 40px
