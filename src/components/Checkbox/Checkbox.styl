
.checkbox
  display block

  &_disabled &
    &__label
      pointer-events none
      color #9B9B9B
      opacity .8
      cursor default

      &::before
        border 1px solid #9B9B9B

  &_disabled &__field:checked + label::before
    background-color #D6D6D6
    border 1px solid transparent

  &__field
    display none

    &:checked + label::after
      opacity 1

    &:checked + .checkbox__label::before
      background-color #A69C7B
      border 1px solid transparent


  &__label
    position relative
    padding-left 27px
    font-size 12px
    color #4A4A4A
    white-space nowrap
    cursor pointer
    user-select none

    &::before
    &::after
      position absolute
      content ''

    &::before
      top -2px
      left 0
      width 17px
      height 17px
      background-color transparent
      border 1px solid #D6D6D6
      border-radius 2px
      transition background-color .3s

    &::after
      top 2px
      left 4px
      width 9px
      height 6px
      opacity 0
      border-left 2px solid #fff
      border-bottom 2px solid #fff
      transform rotate(-40deg)
      transition opacity .3s
